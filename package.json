{
  "name": "on-the-fridge",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo run type-check",
    "deploy": "turbo run build && wrangler publish packages/worker/index.ts"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "prettier": "latest",
    "turbo": "latest",
    "typescript": "^4.6.4",
    "wrangler": "^2.0.5"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.7.0"
  },
  "packageManager": "npm@8.3.1"
}
